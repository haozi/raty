{
  "name": "koaplus",
  "version": "0.0.0",
  "description": "",
  "main": "lib/index.js",
  "dependencies": {
    "koa": "^2.0.0"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "6.x.x",
    "babel-core": "6.x.x",
    "babel-plugin-transform-runtime": "6.x.x",
    "babel-preset-es2015": "6.x.x",
    "babel-preset-stage-3": "6.x.x",
    "istanbul": "^0.4.0",
    "parallelshell": "^2.0.0",
    "standard": "*"
  },
  "scripts": {
    "start": "npm run build && node lib/app",
    "dev": "npm run build && parallelshell 'npm run watch' 'npm run debug'",
    "test": "ava test/",
    "test-cov": "istanbul cover ./node_modules/mocha/bin/_mocha -- -t 50000 --recursive  -R spec test/",
    "copy": "rm -rf lib && cp -r src lib",
    "build": "npm run copy && npm run lint && babel --presets es2015,stage-3 --plugins transform-runtime src/ --out-dir lib/ --source-maps inline",
    "watch-build": "npm run build -- --watch",
    "watch": "npm run watch-build",
    "lint": "standard src/*.js --fix",
    "debug": "devtool lib/app --watch >/dev/null 2>&1",
    "prepublish": "npm run lint && npm run build"
  },
  "author": "",
  "license": "MIT"
}
